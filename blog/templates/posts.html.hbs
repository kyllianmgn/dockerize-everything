{{#*inline "body"}}
    <main class="container">
        <h1>The Computer Club's Blog</h1>
        <section>
            <h2>All posts</h2>
            {{#each posts}}
                <article>
                    <p>
                        <a href="/posts/{{ this.id }}">{{ this.title }}</a>
                    </p>
                    <small>{{ this.summary }}</small>
                </article>
            {{else}}
                <p>No posts yet.</p>
            {{/each}}
        </section>
    </main>
{{/inline}}
{{> base}}
